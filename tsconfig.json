{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "rootDirs": [
      "src",
      "tests"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./src"
      ],
      "@/tests/*": [
        "tests/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "include": [
    "src/**/*",
    "src/Routes"
  ]
}