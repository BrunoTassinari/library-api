{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "rootDirs": ["src", "tests"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es2021",
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src"],
      "@/tests/*": ["tests/*"],
      "@entities/*": ["Domain/Entities/*"],
      "@repositories/*": ["Domain/Repositories/*"],
      "@factories/*": ["Application/Factories/*"],
      "@mappers/*": ["Application/Mappers/*"],
      "@useCases/*": ["Application/UseCases/*"],
      "@implemetations/*": ["Infrastructure/prisma/implementations/*"],
      "@dtos/*": ["Presentation/DTOs/*"],
      "@controllers/*": ["Presentation/Controllers/*"],
      "@routes/*": ["Presentation/Routes/*"],
    }
  },
  "exclude": ["node_modules", "dist", "tests" ],
  "include": ["src/**/*"]
}
